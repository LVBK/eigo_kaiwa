<%= render 'layouts/header2' %>
<%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>


<section id="log" class="log-section">
                <div class="container-fluid">
                  <h1>Listing User Logs</h1>
                  <p id="notice"><%= notice %></p>
                    <div class="row">
                        <div class="col-lg-6">
                            <%= column_chart @groups_for_chart %>
                        </div>
                        <div class="col-lg-6">
                            <%= line_chart @groups_for_chart %>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            
<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Sentence learning</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_logs.each do |user_log| %>
      <tr>
        <td><%= user_log.user.email %></td>
        <td><%= user_log.sentence_learning %></td>
        <td><%= link_to 'Show', user_log %></td>
        <td><%= link_to 'Edit', edit_user_log_path(user_log) %></td>
        <td><%= link_to 'Destroy', user_log, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User log', new_user_log_path %>
                        </div>
                    </div>
                </div>
</section>

<%= render 'layouts/footer' %>
